<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/lib/Guidr.droid"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#6394FF">
    <ImageView
          
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/homeBanner" />

  </LinearLayout>


  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/Toilet1_ved_indgangen"
            android:id="@+id/HeaderImage" />

        <TextView
            android:text="facility (testing)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/Name"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:fadeScrollbars="false"
            android:background="#000"
            android:paddingBottom ="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#222">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AboutFacility"
                    android:textSize="15sp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Toiletet ved indgangen" />
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/OpenHoursPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:paddingTop="5dp"
            android:weightSum="1">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:minHeight="25px"
            android:minWidth="25px"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/mapButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="1dp"
                android:layout_height="80dp"
                android:drawableTop="@drawable/map_pin"
                android:background="@null" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Find on map"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>