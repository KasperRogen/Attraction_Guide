<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/lib/Guidr.droid"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6394FF">
        <ImageView
          
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:id="@+id/homeBanner" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="vertical"
            android:background="@null">
            <LinearLayout
                android:id="@+id/buttonPanel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/animalButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/animal_button_small"
                    android:background="@null" />

                <Button
                    android:id="@+id/facilityButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingBottom="-5dp"
                    android:drawableTop="@drawable/facilities_button_small"
                    android:background="@null" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonPanel1"
                android:layout_centerHorizontal="true"
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/buttonpanel2">
                <Button
                    android:id="@+id/mapButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="145dp"
                    android:drawableTop="@drawable/map_button_small"
                    android:background="@null" />
                <Button
                    android:id="@+id/infoButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/info_button_small"
                    android:background="@null" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/buttonpanel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonpanel2"
                android:layout_centerHorizontal="true"
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/newsbutton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="145dp"
                    android:drawableTop="@drawable/news_button_small"
                    android:background="@null" />
                <ImageView
                    android:id="@+id/checkinbutton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/checkin_button_small"
                    android:background="@null" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>