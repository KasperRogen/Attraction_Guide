<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/lib/Guidr.droid"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6394FF">
        <ImageView
          
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:id="@+id/imageView" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="vertical"
            android:background="@null">
            <LinearLayout
                android:id="@+id/buttonPanel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:minHeight="25px"
                android:minWidth="25px"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/baboonButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Baboon"
                    android:background="@null" />

                <Button
                    android:id="@+id/brownbearButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingBottom="-5dp"
                    android:drawableTop="@drawable/Brown_bear"
                    android:background="@null" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonPanel1"
                android:layout_centerHorizontal="true"
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/buttonpanel2">
                <Button
                    android:id="@+id/soloveButton"
                    android:layout_marginBottom="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Californian_Sea_Lion"
                    android:background="@null" />
                <Button
                    android:id="@+id/flodhestButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Pygmy_Hippo"
                    android:background="@null" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/buttonpanel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonpanel2"
                android:layout_centerHorizontal="true"
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/elefantbutton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Elephant"
                    android:background="@null" />
                <Button
                    android:id="@+id/girafbutton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Giraffe"
                    android:background="@null" />
            </LinearLayout>
          
            <LinearLayout
                android:id="@+id/buttonpanel4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonpanel3"
                android:layout_centerHorizontal="true"
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/isbjornButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Polar_bear"
                    android:background="@null" />
                <Button
                    android:id="@+id/kaimanButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Black_Kaiman"
                    android:background="@null" />
            </LinearLayout>
          
            <LinearLayout
                android:id="@+id/buttonpanel5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonpanel4"
                android:layout_centerHorizontal="true"
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/kejserButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Emperor_tamarin"
                    android:background="@null" />
                <Button
                    android:id="@+id/lemurButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Lemur"
                    android:background="@null" />
            </LinearLayout>
          
            <LinearLayout
                android:id="@+id/buttonpanel6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonpanel5"
                android:layout_centerHorizontal="true"
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/loveButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Lion"
                    android:background="@null" />
                <Button
                    android:id="@+id/pingvinButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Penguin"
                    android:background="@null" />
            </LinearLayout>
          
            <LinearLayout
                android:id="@+id/buttonpanel7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonpanel6"
                android:layout_centerHorizontal="true"
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/surikatButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Meercat"
                    android:background="@null" />
                <Button
                    android:id="@+id/tigerButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Tiger"
                    android:background="@null" />
            </LinearLayout>
          
            <LinearLayout
                android:id="@+id/buttonpanel8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonpanel7"
                android:layout_centerHorizontal="true"
                android:minHeight="25px"
                android:minWidth="25px"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <Button
                    android:id="@+id/zebraButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/Zebra"
                    android:background="@null" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>