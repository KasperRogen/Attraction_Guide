<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/lib/Guidr.droid"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:minHeight="25px"
    android:minWidth="25px"
    android:background="#000"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:weightSum="2">

    <LinearLayout
        android:background="#AAAAAA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        >

        <ImageView
            android:src="@drawable/tigerHeader"
            android:id="@+id/Map_Info_Window_Image"

            android:scaleType="fitXY"
            android:adjustViewBounds="true"

            android:layout_width="0dp"
            android:maxWidth="150dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/Baboon"
            android:background="@null"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp">
            <TextView
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Map_Info_Window_Name"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Map_Info_Window_Feeding_Time"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>