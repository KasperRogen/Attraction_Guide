<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/lib/Guidr.droid"
    android:id="@+id/buttonPanel1"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:minHeight="25px"
    android:minWidth="25px"
    android:background="#AAAAAA"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:weightSum="2">

    <ImageView
        android:src="@drawable/tigerHeader"
        android:id="@+id/Map_Info_Window_Image"

        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        android:layout_width="0dp"
        android:maxWidth="150dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/Baboon"
        android:background="@null"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="5dp">
        <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Map_Info_Window_Name"
            android:gravity="center"/>

        <TextView
            android:text="Feeding Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Map_Info_Window_Feeding_Time"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>