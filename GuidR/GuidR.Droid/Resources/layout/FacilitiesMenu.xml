<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/lib/Guidr.droid"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#6394FF">
    <ImageView
          
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/imageView" />

  </LinearLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@null"
      android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="25dp"
        android:minWidth="25dp"
        android:orientation="vertical"
        android:background="@null">
      <LinearLayout
          android:id="@+id/buttonPanel1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="false"
          android:minHeight="25dp"
          android:minWidth="25dp"
          android:orientation="horizontal"
          android:layout_marginTop="15dp"
          android:paddingTop="5dp"
          android:weightSum="2">
        <Button
            android:id="@+id/toiletButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/Toilet" 
            android:background="@null" />
        <Button
            android:id="@+id/restaurantButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/Restaurant"
            android:background="@null" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/buttonPanel2"
          android:layout_below="@+id/buttonPanel1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="false"
          android:minHeight="25dp"
          android:minWidth="25dp"
          android:orientation="horizontal"
          android:layout_marginTop="15dp"
          android:paddingTop="5dp"
          android:weightSum="2">
        <Button
            android:id="@+id/smokeButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/Smoke_area"
            android:background="@null" />
        <Button
            android:id="@+id/playgroudButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/Playground_Menu"
            android:background="@null" />
      </LinearLayout>
      
    </RelativeLayout>
  </ScrollView>
</LinearLayout>